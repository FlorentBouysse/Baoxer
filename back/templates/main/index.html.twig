{% extends 'base.html.twig' %}

{% block title %}Back-Office{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Bienvenue dans votre Back-Office ðŸ˜Š !</h1>

    {% block subBody %}
    <div class="example-wrapper">
      <div class="row">
        <div class="col-md-6">
          <h2><a href="{{ path('app_user_index')}}" style="text-decoration : none; color: #2d2d2d">Liste des utilisateurs</a></h2>
            <table class="table table-hover table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">E-mail</th>
                    <th scope="col">RÃ´les</th>
                    <th scope="col">Modifier</th>
                    </tr>
                </thead>
                    <tbody class="table-group-divider">
                        {% for user in users | slice(0, 5) %}
                            <tr>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles | join(', ') }}</td>
                                <td>
                                <a href="{{ path('app_user_edit', {id:user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
          </table>
        </div>

        <div class="col-md-6">
          <h2><a href="{{ path('app_item_list')}}" style="text-decoration : none; color: #2d2d2d">Liste des articles</a></h2>
            <table class="table table-hover table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Modifier / Supprimer</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {% for item in items | slice(0, 5) %}
                    <tr>
                        <td scope="row">{{ item.name }}</th>
                        <td>{{ item.price }} â‚¬</td>
                        <th scope="col">
                            <a class="btn btn-warning btn-sm" href="{{ path("app_item_update", {id: item.id}) }}" role="button">Modifier</a>
                            <a class="btn btn-danger btn-sm" href="{{ path("app_item_delete", {id: item.id}) }}" role="button">Supprimer</a>
                        </th>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
          <h2><a href="{{ path('app_skill')}}" style="text-decoration : none; color: #2d2d2d">Liste des compÃ©tences</a></h2>
            <table class="table table-hover table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Niveau requis</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Modifier</th>
                    </tr>
                </thead>
                    <tbody class="table-group-divider">
                        {% for skill in skills | slice(0, 5) %}
                            <tr>
                                <th scope="row">{{ skill.levelRequired }}</th>
                                <td>{{ skill.name }}</td>
                                <th scope="col">
                                    <a class="btn btn-warning btn-sm" href="{{ path("app_skill_update", {id: skill.id}) }}" role="button">Modifier</a>
                                    <a class="btn btn-danger btn-sm" href="{{ path("app_skill_delete", {id: skill.id}) }}" role="button">Supprimer</a>
                                </th>
                            </tr>
                        {% endfor %}
                    </tbody>
            </table>
        </div>

        <div class="col-md-6">
          <h2><a href="{{ path('app_boxer_index')}}" style="text-decoration : none; color: #2d2d2d">Liste des boxeurs</a></h2>
            <table class="table table-hover table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Niveau</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">PNJ</th>
                        <th scope="col">Modifier / Supprimer</th>
                    </tr>
                </thead>
                    <tbody class="table-group-divider">
                        {% for boxer in boxers | slice(0, 5) %}
                            <tr>
                                <th scope="row">{{ boxer.level.id}}</th>
                                 <td>{{ boxer.username }}</td>
                                <td>{{ boxer.npc }}</td>
                                <th scope="col">
                                    <a class="btn btn-warning btn-sm" href="{{ path("app_boxer_update", {id: boxer.id}) }}" role="button">Modifier</a>
                                    <a class="btn btn-danger btn-sm" href="{{ path("app_boxer_delete", {id: boxer.id}) }}" role="button">Supprimer</a>
                                </th>
                            </tr>
                        {% endfor %}
                    </tbody>
            </table>
        </div>

        <div class="col-md-6">
          <h2><a href="{{ path('app_tournament_index')}}" style="text-decoration : none; color: #2d2d2d">Liste des tournois</a></h2>
            <table class="table table-hover table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom du tournois</th>
                        <th scope="col">RÃ©compense</th>
                        <th scope="col">Niveau Gagner</th>
                        <th scope="col">Modifier / Supprimer</th>
                    </tr>
                </thead>
                    <tbody class="table-group-divider">
                        {% for tournament in tournaments | slice(0, 5) %}
                            <tr>
                                <td>{{ tournament.name }}</td>
                                <td>{{ tournament.moneyPrize }}</td>
                                <td>{{ tournament.level }}</td>
                                <th scope="col">
                                    <a class="btn btn-warning btn-sm" href="{{ path("app_tournament_update", {id: tournament.id}) }}" role="button">Modifier</a>
                                    <a class="btn btn-danger btn-sm" href="{{ path("app_tournament_delete", {id: tournament.id}) }}" role="button">Supprimer</a>
                                </th>
                            </tr>
                        {% endfor %}
                    </tbody>
            </table>
        </div>
      </div>
    </div>
    {% endblock %}
{% endblock %}