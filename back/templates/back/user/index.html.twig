{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <a class="btn btn-success btn-sm" href="{{ path("app_user_create") }}" role="button">CrÃ©er/Ajouter un utilisateur</a>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">E-mail</th>
      <th scope="col">Statut</th>
      <th scope="col">Bannis</th>
      <th scope="col">Modifier</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
  {% for user in users %}
    <tr>
      <th scope="row">{{ user.id }}</th>
      <td>{{ user.email }}</td>
      <td>{{ user.status }}</td>
      <td>{{ user.banned }}</td>
      <th scope="col">
          <a class="btn btn-warning btn-sm" href="{{ path("app_user_edit", {id: user.id}) }}" role="button">Modifier</a>
      </th>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}